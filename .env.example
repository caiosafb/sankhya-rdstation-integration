# Application
NODE_ENV=development
PORT=3000
API_KEY=your-api-key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=optional-redis-password

# Sankhya ERP
SANKHYA_BASE_URL=https://api.sankhya.com.br/gateway/v1
SANKHYA_TOKEN=sankhya-token
SANKHYA_API_KEY=sankhya-api-key
SANKHYA_USERNAME=username
SANKHYA_PASSWORD=password

# RD Station CRM
RD_STATION_CLIENT_ID=client-id
RD_STATION_CLIENT_SECRET=client-secret
RD_STATION_ACCESS_TOKEN=refreshed-automaticaly
RD_STATION_REFRESH_TOKEN=refresh-token
RD_STATION_CALLBACK_URL=https://domain.com/api/rdstation/callback

# Queue Configuration
BULL_REDIS_HOST=${REDIS_HOST}
BULL_REDIS_PORT=${REDIS_PORT}
BULL_REDIS_PASSWORD=${REDIS_PASSWORD}
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_DELAY_MS=1000
ENABLE_AUTO_SYNC=true

# Webhook Configuration
WEBHOOK_SECRET=webhook-secret
WEBHOOK_VALIDATE_SIGNATURE=true